<section>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="title is-2 mb-6">Edit Post</h2>
  <form class="edit-post-form">
    <div class="field">
      <label class="label">Title</label>
      <div class="control has-icons-right">
        <input class="input is-warning" type="text" name="post-title" value="{{post.title}}" />
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
    </div>

    <div class="field">
      <label class="label">Post Text</label>
      <div class="control">
        <textarea class="textarea" name="textarea">{{post.post_text}}
        </textarea>
      </div>
    </div>
    <div>
      <p class="ml-1 is-italic">
        by you on
        {{format_date post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}}
          {{format_plural "comment" post.comments.length}}</a>
      </p>
    </div>
    <div class="control">
      <button type="submit" class="mr-4 button is-warning">Update Post</button>
      <button type="button" id="delete" class="button is-warning">Delete Post</button>
    </div>
  </form>
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>